<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPrincipal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/gradiente_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgTiempo"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_solete_amarillo" />

            <TextView
                android:id="@+id/txtDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textColor="#F1ECEC"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#F1ECEC"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="match_parent"

        android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="5">

         <TextView
             android:id="@+id/Consejo"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="Consejo"
             android:textColor="#F1ECEC"
             android:gravity="center"
             android:textAlignment="center"
             android:textSize="24sp" />

     </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/Datos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/DatosIzquierda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTemperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="Temperatura"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtHumedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:text="Humedad"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtLluvia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:text="Lluvia"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/DatosDerecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVelViento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="2"
                android:text="Vel Viento"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSensacionTermica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:text="sTermica"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Presion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:text="Presion"
                android:textColor="#F1ECEC"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtPolvo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Cantidad de polvo en el aire"
            android:textColor="#F1ECEC"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/Luminosidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="Luminosidad"
            android:textColor="#F1ECEC"
            android:textSize="18sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Encuenta"
            android:layout_gravity="center"
            android:layout_weight="3"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>

    </LinearLayout>


</LinearLayout>
